{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start",
      "dependsOn": ["npm install"],
      "problemMatcher": [],
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "silent"
      },
      "auto": true
    },
    {
      "label": "npm run dev",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "dev"
      ],
      "dependsOn": ["npm install", "kill 1234"]
    },
    {
      "label": "npm install",
      "type": "shell",
      "command": "npm",
      "args": [
        "install"
      ],
    },
    {
      "label": "kill 1234",
      "type": "shell",
      "command": "npx",
      "args": [
        "kill-port",
        "1234"
      ]
    },
    {
      "label": "terminal",
      "type": "shell",
      "command": "bash",
      "args": []
      ]
    },
  ]
}